---
import { Image } from "astro:assets";

const {
    title = "ProjectName",
    description = "Some info here...",
    link = "#",
    image = "",
} = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="card">
    {
        image && (
            <Image
                src={image}
                alt={title}
                width={300}
                height={200}
                style={{ objectFit: "cover" }}
            />
        )
    }
    <div class="card-content">
        <strong>{title}</strong>
        <p>{description}</p>
    </div>
</a>
<style>
    .card {
        display: flex;
        position: relative;
        flex-direction: column;
        align-items: center;
        width: 100%;
        height: 1100px;
        margin: 10px;
        border-radius: 0.5rem;
        overflow: hidden;
        filter: grayscale();
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-radius 0.3s ease,
            filter 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
        border-radius: 16px;
        z-index: 1000;
        box-shadow:
            0 10px 25px rgba(0, 0, 0, 0.2),
            0 4px 50px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        filter: none;
    }

    .card img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        transition: transform 0.5s ease;
    }

    .card:hover img {
        transform: scale(1.1);
    }

    .card-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end; /* Pushes content to the bottom */
        width: 100%;
        padding: 1rem;
        margin-top: auto; /* Ensures the content is pushed to the bottom of the card */
        z-index: 1;
        background: rgba(
            0,
            0,
            0,
            0.5
        ); /* Optional: adds a semi-transparent background for readability */
        color: white; /* Optional: improves text contrast against the image */
    }

    strong,
    p {
        margin-bottom: 1rem;
        text-align: center;
    }

    a {
        text-decoration: none;
        text-transform: lowercase;
        border: 1px solid var(--clr-cta);
        color: light-dark(var(--clr-cta), white);
        border-radius: 3px;
        padding: 0.25rem 0.5rem;
        transition: 150ms ease-in-out;
        z-index: 1;
    }

    a:hover,
    a:focus-visible {
        background-color: var(--clr-cta);
        color: white;
        outline: none;
    }
</style>
