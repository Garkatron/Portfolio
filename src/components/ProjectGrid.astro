---
import ProjectCard from "./ProjectCard.astro";

interface Card {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { projects = [] } = Astro.props as {
    projects: Card[];
};
---

<div class="container">
    <div class="grid">
        {
            projects.map((card) => (
                <ProjectCard
                    title={card.title}
                    description={card.description}
                    link={card.link}
                    image={card.image}
                />
            ))
        }
    </div>
</div>

<style>
    .container {
        padding: 1rem;
    }

    .grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: 1fr;
    }

    @media (min-width: 768px) {
        .grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
