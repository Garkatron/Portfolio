---
import ProjectCard from "./ProjectCard.astro";

interface Card {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { projects = [] } = Astro.props as {
    projects: Card[];
};
---

<div class="grid">
    {
        projects.map((card) => (
            <ProjectCard
                title={card.title}
                description={card.description}
                link={card.link}
                image={card.image}
            />
        ))
    }
</div>

<style>
    .grid {
        display: flex;
        justify-content: center;
    }

    @media (max-width: 765px) {
        .grid {
            display: block;
        }
    }
</style>
