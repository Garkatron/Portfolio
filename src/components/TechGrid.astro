---
import SkillProgress from "./SkillProgress.astro";

interface Skill {
    icon: string;
    progress: number;
    title: string;
}

const { title = "CategoryName", skills = [] } = Astro.props as {
    title?: string;
    skills: Skill[];
};
---

<div class="tech-category">
    <div class="tech-category-title">{title}</div>
    <div class="tech-grid">
        {
            skills.map((skill) => (
                <SkillProgress
                    icon={skill.icon}
                    progress={skill.progress}
                    title={skill.title}
                />
            ))
        }
    </div>
</div>

<style>
    .tech-categories {
        display: flex;
        flex-direction: row;
        gap: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .tech-category {
        display: flex;
        flex-direction: column;
        align-items: flex;
    }

    .tech-category-title {
        margin-bottom: 0.3rem;
        font-weight: 600;
        font-size: 0.9rem;
        text-align: end;
    }

    .tech-grid {
        display: flex;
        justify-content: end;
        gap: 4.5rem;
    }

