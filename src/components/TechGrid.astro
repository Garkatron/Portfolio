---
import SkillProgress from "./SkillProgress.astro";

interface Skill {
    icon: string;
    progress: number;
    title: string;
}

const { title = "CategoryName", skills = [] } = Astro.props as {
    title?: string;
    skills: Skill[];
};
---

<div>
    <h6>{title}</h6>
    <div class="grid">
        {
            skills.map((skill) => (
                <SkillProgress
                    icon={skill.icon}
                    progress={skill.progress}
                    title={skill.title}
                />
            ))
        }
    </div>
</div>
