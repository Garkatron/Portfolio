---
const { title = "CategoryName" } = Astro.props;
---

<div class="tech-category">
    <div class="tech-category-title">{title}</div>
    <div class="tech-grid">
        <slot />
    </div>
</div>

<style>
    .tech-categories {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .tech-category {
        display: flex;
        flex-direction: column;
        align-items: flex;
    }

    .tech-category-title {
        margin-bottom: 0.3rem;
        font-weight: 600;
        font-size: 0.9rem;
        text-align: center;
    }

    .tech-grid {
        display: flex;
        gap: 0.5rem;
    }
</style>
