<style>
	html {
		height: 100%;
		overflow-y: auto;
	}

	body {
		min-height: 100%;
		margin: 0;
		padding: 0;
		background: transparent;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.paper-effect {
		all: unset;
		display: flex;
		flex-direction: column;
		padding: 1rem;
		background: transparent;
	}

	.paper-footer {
		transform: perspective(600px) rotateX(-40deg) scale(0.8)
			translateZ(20px);
		border-radius: 4px;
	}

	a {
		display: inline-block;
		outline: 0;
		text-align: center;
		cursor: pointer;
		min-width: 80px;
		height: 32px;
		color: rgb(255, 255, 255);
	}

	#t3-projects-section {
		display: flex;
		flex-direction: column;
		justify-content: center;
		margin: 0 10%;
	}

	.card-grid {
		justify-content: center;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 364px));
		gap: 1.5rem;
		margin-bottom: 20px;
	}

	.tech-categories {
		display: flex;
		flex-direction: row;
		justify-content: center;
		gap: 2.5rem;
		margin-bottom: 0.5rem;
	}

	@media (max-width: 600px) {
		.profile-section {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.description {
			flex: unset;
		}

		.tech-categories {
			flex-direction: column;
		}
	}
</style>
